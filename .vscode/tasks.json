{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "Build active file",
      "command": "./build.sh",
      "args": [
        "${file}"
      ],
      "options": {
        "env": {
          "WORKSPACE": "${workspaceFolder}"
        }
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build"
    },
  ]
}